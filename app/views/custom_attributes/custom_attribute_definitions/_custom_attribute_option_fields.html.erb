<div class="multiple_fields custom_options option_id<%= f.object.id %>" id=<%= dom_id(f.object) %>>
  <% if f.object.id.present? %>
    <div class="pull-right">
      <%= link_to "#_", remote: true, class: 'delete text_style' do %>
        <i class="icon-remove-sign"></i>
      <% end %>
    </div>
    <%= f.hidden_field :_destroy, class: "hidden_field#{@option_id}" %>  
  <% else %>
    <div class="pull-right"><%= link_to "", "#_", class: "icon-remove-sign" %></div>
  <% end %>  
  <a href="#_" class="multihandle pull-left"><i class="icon-move"></i>&nbsp;</a>
  <%= f.label :label %>
  <%= f.text_field :label, class: "span4 input-height-ez"%>
</div>
<div class="clearfix"></div>
