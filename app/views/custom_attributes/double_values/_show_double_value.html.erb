<% cssClasses ||= {} %>
<% required   ||= false %>
<% double_value.value ||= double_value.custom_attribute_defn.default_value %>

<div class="custom-attributes title <%=cssClasses[:title]%>">
  <%= double_value.name %>
  <% if required %>
    <span class="<%= cssClasses[:required] %>">*</span>
  <% end %>
</div>
<div class="custom-attributes value edit-cursor <%=cssClasses[:field]%>">
  <%= double_value.value %>
</div>